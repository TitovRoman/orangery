[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
WorkingDirectory=/home/roman/study/Django/orangery/src
ExecStart=/home/roman/study/Django/orangery/env/bin/gunicorn --workers 3 --bind unix:/home/roman/study/Django/orangery/gunicorn/gunicorn.sock config.wsgi:application --access-logfile /home/roman/study/Django/orangery/gunicorn/access.log --error-logfile /home/roman/study/Django/orangery/gunicorn/error.log
Restart=on-failure

[Install]
WantedBy=multi-user.target
